{
	"name": "self-zunda",
	"version": "1.0.0",
	"description": "ずんだもんのDiscord Bot なのだ！",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"dev": "vite-node --watch src/index.ts",
		"dev:validate": "concurrently \"npm run dev\" \"npm run type-check -- --watch\"",
		"deploy-commands": "tsx src/cli/deploy-commands.ts",
		"test-voicevox": "tsx src/cli/test-voicevox.ts",
		"start": "npm run build && node dist/index.js",
		"build": "vite build",
		"test": "vitest run",
		"test:watch": "vitest",
		"check": "tsc --noEmit && biome check --write . && knip --fix",
		"lint": "biome lint .",
		"generate-api": "npx openapi-typescript-codegen --input http://localhost:50021/openapi.json --output src/api/generated"
	},
	"dependencies": {
		"@discordjs/voice": "^0.18.0",
		"axios": "^1.8.4",
		"discord.js": "^14.14.1",
		"dotenv": "^16.4.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/jest": "^29.5.14",
		"@types/node": "^20.11.24",
		"concurrently": "^8.2.2",
		"knip": "^5.46.2",
		"tsx": "^4.19.3",
		"typescript": "^5.3.3",
		"vite": "^6.2.2",
		"vite-node": "^3.0.9",
		"vitest": "^3.0.9"
	},
	"knip": {
		"entry": ["src/index.ts"],
		"ignore": ["src/api/generated/**", "src/cli/**", "**/*.test.ts"]
	}
}
