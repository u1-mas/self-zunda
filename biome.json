{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["**/generated/**"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"style": {
				"useNamingConvention": "off",
				"noNamespaceImport": "off"
			},
			"correctness": {
				"noNodejsModules": "off",
				"useHookAtTopLevel": "off",
				"useImportExtensions": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "all",
			"semicolons": "always"
		}
	},
	"overrides": [
		{
			"include": ["*.test.ts"],
			"javascript": {
				"globals": [
					"expect",
					"vi",
					"describe",
					"test",
					"beforeEach",
					"afterEach",
					"afterAll",
					"beforeAll",
					"it"
				]
			}
		}
	]
}
